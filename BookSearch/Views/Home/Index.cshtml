@using System.Web
@using System.Web.Optimization


@model SearchSelection
@{
    ViewData["Title"] = "Home Page";
}

<head>
    
<style>
body {
   /*background: 'C:\Users\saran\VisualStudioCodeProjects\BookSearch\BookSearch\Views\Home\Images\book.png';*/
 background-color: aliceblue;
